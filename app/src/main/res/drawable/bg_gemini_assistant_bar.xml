<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base dark glass -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#141824"
                android:centerColor="#101421"
                android:endColor="#0B0F18" />
        </shape>
    </item>

    <!-- Soft inner top highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="27dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#26FFFFFF"
                android:centerColor="#0FFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>
