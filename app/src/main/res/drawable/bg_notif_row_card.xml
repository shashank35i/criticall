<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- soft shadow (subtle, looks premium even without elevation) -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D000000"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

    <!-- main card -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="18dp"/>

            <!-- premium thin outline -->
            <stroke
                android:width="0.5dp"
                android:color="#E6EEF6"/>

            <!-- balanced padding so content never touches edges -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

</layer-list>
