<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- base Gemini-like indigo/teal gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0A0F1C"
                android:centerColor="#111B2A"
                android:endColor="#0B1E33"
                android:angle="135" />
        </shape>
    </item>
    <!-- soft aurora glow from top -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#333A7BFF"
                android:centerColor="#1A18D8C5"
                android:endColor="#00111B2A"
                android:angle="90" />
        </shape>
    </item>
    <!-- subtle border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#1F2F47" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
