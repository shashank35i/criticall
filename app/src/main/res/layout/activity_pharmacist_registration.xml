<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Toolbar title -->
    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:text="@string/pharmacist_registration"
        android:textColor="#101828"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <!-- Divider -->
    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerifyContinue"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:text="@string/verify_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="#41A23D"
        app:cornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vFooterDivider"/>

    <!-- Footer divider -->
    <View
        android:id="@+id/vFooterDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:background="#F2F4F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"/>

    <!-- Powered by footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text=""
        android:textColor="#667085"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Scroll content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/vDivider"
        app:layout_constraintBottom_toTopOf="@id/btnVerifyContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">

            <!-- Icon tile -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3E8FF">

                <ImageView
                    android:id="@+id/ivTopIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/pharmacists"
                    app:srcCompat="@drawable/ic_pill"
                    app:tint="#7A5AF8"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/pharmacy_details"
                android:textColor="#101828"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <!-- ===== Full Name * ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLblFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_full_name"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="*"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tilFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_enter_your_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="textPersonName"/>
            </FrameLayout>
            <!-- ===== Phone Number * ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLblPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="*"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tilPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_phone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="phone"/>
            </FrameLayout>

            <!-- ===== Pharmacy Name * ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLblPharmacyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pharmacy_name"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="*"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tilPharmacyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPharmacyName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_pharmacy_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="textCapWords"/>
            </FrameLayout>

            <!-- ===== Drug License * ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLblDrugLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drug_license_number"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="*"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tilDrugLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etDrugLicense"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_drug_license"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="text"/>
            </FrameLayout>

            <!-- ===== Village/Town * ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLblVillage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/village_town"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="*"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tilVillage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etVillage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_village"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="textCapWords"/>
            </FrameLayout>

            <!-- ===== Full Address (optional) ===== -->
            <TextView
                android:id="@+id/tvLblAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/full_address"
                android:textColor="#101828"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/tilAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp"
                    android:gravity="top"
                    android:background="@drawable/bg_input_stroke_selector"
                    android:hint="@string/hint_address"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"/>
            </FrameLayout>

            <!-- ========================= -->
            <!--  Supporting Documents UI -->
            <!-- ========================= -->

            <!-- Title row + count pill -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDocsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/supporting_documents_min_3"
                    android:textColor="#101828"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDocsCountPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_docs_pill"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/documents_0_min_3"
                    android:textColor="#101828"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Helper text -->
            <TextView
                android:id="@+id/tvDocsHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/docs_help_types_size"
                android:textColor="#667085"
                android:textSize="13sp"/>

            <!-- Upload zone (dashed) -->
            <LinearLayout
                android:id="@+id/cardUploadZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_upload_zone_dashed"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F2F4F7">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/add_document"
                        app:srcCompat="@drawable/ic_upload_24"
                        app:tint="#101828"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUploadTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_documents"
                        android:textColor="#101828"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvUploadSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/tap_to_choose_or_take_photo"
                        android:textColor="#667085"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/add_document"
                    app:srcCompat="@drawable/ic_chevron_right_18"
                    app:tint="#98A2B3"/>
            </LinearLayout>

            <!-- Actions row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddDocument"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="@string/upload_file"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_file_24"
                    app:iconPadding="10dp"
                    app:iconTint="#101828"
                    app:backgroundTint="#F2F4F7"
                    android:textColor="#101828" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="@string/take_photo"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_camera_24"
                    app:iconPadding="10dp"
                    app:iconTint="#101828"
                    app:backgroundTint="#F2F4F7"
                    android:textColor="#101828" />
            </LinearLayout>

            <!-- Error banner (hidden by default; show if <3 docs) -->
            <TextView
                android:id="@+id/tvDocsError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_error_banner"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/please_upload_min_3_docs"
                android:textColor="#991B1B"
                android:textSize="13sp"
                android:visibility="gone"/>

            <!-- Uploaded files list container -->
            <LinearLayout
                android:id="@+id/docsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" />

            <!-- Empty state (optional) -->
            <TextView
                android:id="@+id/tvDocsEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/no_documents_added_yet"
                android:textColor="#98A2B3"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
