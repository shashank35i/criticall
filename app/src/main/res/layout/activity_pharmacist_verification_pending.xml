<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back arrow -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#1F2A37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Divider -->
    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Icon background -->
    <View
        android:id="@+id/vIconBg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bg_pending_icon"
        app:layout_constraintTop_toBottomOf="@id/vDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Clock icon -->
    <ImageView
        android:id="@+id/ivClock"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/pending"
        app:srcCompat="@drawable/ic_clock"
        app:tint="#F79009"
        app:layout_constraintTop_toTopOf="@id/vIconBg"
        app:layout_constraintBottom_toBottomOf="@id/vIconBg"
        app:layout_constraintStart_toStartOf="@id/vIconBg"
        app:layout_constraintEnd_toEndOf="@id/vIconBg"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/verification_pending"
        android:textColor="#101828"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/vIconBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/verification_desc"
        android:textColor="#667085"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress labels -->
    <TextView
        android:id="@+id/tvSubmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitted"
        android:textSize="12sp"
        android:textColor="#667085"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/under_review"
        android:textSize="12sp"
        android:textColor="#667085"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toEndOf="@id/tvSubmitted"
        app:layout_constraintEnd_toStartOf="@id/tvVerified"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/tvVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verified"
        android:textSize="12sp"
        android:textColor="#D0D5DD"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        android:layout_marginTop="26dp"/>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="55"
        android:progressDrawable="@drawable/bg_progress_pending"
        app:layout_constraintTop_toBottomOf="@id/tvReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info card -->
    <View
        android:id="@+id/vInfoBg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_info_card"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info title -->
    <TextView
        android:id="@+id/tvInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/what_happens_next"
        android:textStyle="bold"
        android:textColor="#101828"
        android:textSize="14sp"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="@id/vInfoBg"
        app:layout_constraintStart_toStartOf="@id/vInfoBg"/>

    <!-- Bullet points -->
    <TextView
        android:id="@+id/tvBullet1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✓  Our team reviews your documents"
        android:textColor="#475467"
        android:textSize="13sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfoTitle"
        app:layout_constraintStart_toStartOf="@id/vInfoBg"/>

    <TextView
        android:id="@+id/tvBullet2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✓  We verify your registration number"
        android:textColor="#475467"
        android:textSize="13sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvBullet1"
        app:layout_constraintStart_toStartOf="@id/vInfoBg"/>

    <TextView
        android:id="@+id/tvBullet3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✓  You'll get a notification when done"
        android:textColor="#475467"
        android:textSize="13sp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvBullet2"
        app:layout_constraintStart_toStartOf="@id/vInfoBg"
        app:layout_constraintBottom_toBottomOf="@id/vInfoBg"/>

    <!-- Bottom button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChekStatus"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="@string/check_status"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:background="@drawable/bg_secondary_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
