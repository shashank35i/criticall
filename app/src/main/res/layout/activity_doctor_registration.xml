<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="#101828"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:text="@string/doctor_registration"
        android:textColor="#101828"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <!-- Divider -->
    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F2F4F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/bg_progress_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vDivider" />

    <!-- Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="18dp"
        android:text="@string/verify_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="#2563EB"
        app:cornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vFooterDivider" />
    <View
        android:id="@+id/vFooterDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:background="#F2F4F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"/>

    <!-- Powered by footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text=""
        android:textColor="#667085"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">

            <!-- Header card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:cardBackgroundColor="#EFF6FF"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E7EC"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/doctor"
                            app:srcCompat="@drawable/ic_stethoscope"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDoctorNamePreview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/doctor_registration_title"
                            android:textColor="#101828"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDoctorSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/doctor_registration_subtitle"
                            android:textColor="#2563EB"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/application_details"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/doctor_reg_hint"
                android:textColor="#667085"
                android:textSize="13sp"/>

            <!--  Common style choices (big-app feel):
                 - Outlined box
                 - Rounded corners
                 - Start icon
                 - Good placeholder
                 - Consistent colors
            -->

            <!--  Full name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/hint_doctor_full_name"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"

                app:startIconTint="#667085">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., Dr. Arjun Kumar"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--  Specialization -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="@string/hint_specialization"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"
                 app:startIconTint="#667085">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textCapWords"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., General Physician / Dentist"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--  Registration no -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRegNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="@string/hint_registration_no"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"

                app:startIconTint="#667085"
                app:helperText="Enter as on your registration certificate"
                app:helperTextTextColor="#98A2B3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegNo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="text"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., MCI-123456 / TNMC-98765"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--  Hospital/Clinic -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="@string/hint_practice_place"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"

                app:startIconTint="#667085">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHospital"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textCapWords"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., SIMATS Clinic / City Hospital"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--  Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="@string/hint_phone"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"
                app:startIconTint="#667085">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="phone"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., +91 98765 43210"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--  Experience -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="@string/hint_experience"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxStrokeColor="#D0D5DD"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#667085"

                app:startIconTint="#667085"
                app:suffixText="yrs"
                app:suffixTextColor="#98A2B3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etExperience"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="number"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp"
                    android:hint="e.g., 5"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/uploaded_documents"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/upload_docs_hint"
                android:textColor="#667085"
                android:textSize="13sp"/>

            <!-- Medical License -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E7EC"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardBackgroundColor="#EFF6FF"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/doc_medical_license"
                            app:srcCompat="@drawable/ic_document"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDoc1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/doc_medical_license"
                            android:textColor="#101828"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDoc1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/doc_not_uploaded"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadMedicalLicense"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/upload"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="#2563EB"
                        app:backgroundTint="@android:color/white"
                        app:cornerRadius="20dp"
                        app:strokeColor="#2563EB"
                        app:strokeWidth="1dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Aadhaar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E7EC"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardBackgroundColor="#EFF6FF"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/doc_aadhaar"
                            app:srcCompat="@drawable/ic_document"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDoc2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/doc_aadhaar"
                            android:textColor="#101828"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDoc2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/doc_not_uploaded"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadAadhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/upload"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="#2563EB"
                        app:backgroundTint="@android:color/white"
                        app:cornerRadius="20dp"
                        app:strokeColor="#2563EB"
                        app:strokeWidth="1dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- MBBS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E4E7EC"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardBackgroundColor="#EFF6FF"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/doc_mbbs"
                            app:srcCompat="@drawable/ic_document"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDoc3Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/doc_mbbs"
                            android:textColor="#101828"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDoc3Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/doc_not_uploaded"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadMbbs"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/upload"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="#2563EB"
                        app:backgroundTint="@android:color/white"
                        app:cornerRadius="20dp"
                        app:strokeColor="#2563EB"
                        app:strokeWidth="1dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
