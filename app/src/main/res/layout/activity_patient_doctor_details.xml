<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/onlineOptions"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAudio"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/audio_call"
                android:textAllCaps="false"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#2563EB"
                app:strokeColor="#2563EB"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVideo"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/video_call"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_video"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                app:backgroundTint="#2563EB"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/primaryOptions"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOnline"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/online_consultation"
                android:textAllCaps="false"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_video"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#2563EB"
                app:strokeColor="#2563EB"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPhysical"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/physical_consultation"
                android:textAllCaps="false"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_location_pin"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#2563EB"
                app:strokeColor="#2563EB"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBooked"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:text="@string/booked"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_verified"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#2563EB"
            android:enabled="false"
            android:clickable="false"
            android:focusable="false"
            android:alpha="0.94"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="170dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#2563EB"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxAvatar"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="22dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_doctor"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvDocName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="34dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Dr. Rajesh Kumar"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivShield"/>

                    <TextView
                        android:id="@+id/tvDocSpec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:textColor="#E0EAFF"
                        android:textSize="14sp"
                        tools:text="General Physician"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvDocName"
                        app:layout_constraintEnd_toStartOf="@id/ivShield"/>

                    <ImageView
                        android:id="@+id/ivStar"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="10dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#F79009"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvDocSpec"/>

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="4.8"
                        app:layout_constraintStart_toEndOf="@id/ivStar"
                        app:layout_constraintTop_toBottomOf="@id/tvDocSpec"/>

                    <TextView
                        android:id="@+id/tvReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="9dp"
                        android:textColor="#E0EAFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/tvRating"
                        app:layout_constraintTop_toBottomOf="@id/tvDocSpec"/>

                    <ImageView
                        android:id="@+id/ivShield"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="44dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#F79009"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="-22dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E4E7EC"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:id="@+id/col1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/col2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.33">

                        <TextView
                            android:id="@+id/tvExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#101828"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/years"
                            android:textColor="#101828"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/experience"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/col2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/col1"
                        app:layout_constraintEnd_toStartOf="@id/col3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.34">

                        <TextView
                            android:id="@+id/tvPatients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0+"
                            android:textColor="#101828"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/patients"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/col3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/col2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.33">

                        <TextView
                            android:id="@+id/tvFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#2563EB"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/fee"
                            android:textColor="#667085"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="18dp"
                android:text="@string/about"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardStats"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:textColor="#475467"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/infoRows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxEduIcon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DBEAFE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvEduLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/education"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxEduIcon"
                        app:layout_constraintTop_toTopOf="@id/boxEduIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvEducation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxEduIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvEduLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxWorkIcon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#EDE9FE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="#7A5AF8"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvWorkLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/works_at"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxWorkIcon"
                        app:layout_constraintTop_toTopOf="@id/boxWorkIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvWorksAt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxWorkIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvWorkLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxLangIcon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0F2FE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvLangLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/languages"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxLangIcon"
                        app:layout_constraintTop_toTopOf="@id/boxLangIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvLangs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxLangIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvLangLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvSlotsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="22dp"
                android:text="@string/available_slots"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/infoRows"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardToday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:layout_constraintTop_toBottomOf="@id/tvSlotsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvTodayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTodaySlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_time_chip"/>

                    <TextView
                        android:id="@+id/tvTodayEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/no_slots_available"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTomorrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:layout_constraintTop_toBottomOf="@id/cardToday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvTomorrowLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tomorrow"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTomorrowSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_time_chip"/>

                    <TextView
                        android:id="@+id/tvTomorrowEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/no_slots_available"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>
