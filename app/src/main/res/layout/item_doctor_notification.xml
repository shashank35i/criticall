<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_notif_card"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icType"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon_blue"
        android:padding="10dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="New Appointment Request"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#101828"
        app:layout_constraintStart_toEndOf="@id/icType"
        app:layout_constraintTop_toTopOf="@id/icType"
        app:layout_constraintEnd_toStartOf="@id/rightCol"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Ramesh Kumar has booked a video consultation for 4:00 PM today"
        android:textSize="14sp"
        android:textColor="#475467"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintEnd_toStartOf="@id/rightCol"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="15 min ago"
        android:textSize="12sp"
        android:textColor="#98A2B3"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtMessage"/>

    <TextView
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="View Schedule"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#0C9A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Right column: dot + read + close -->
    <LinearLayout
        android:id="@+id/rightCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/dotUnread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_dot_green"/>

        <ImageView
            android:id="@+id/btnRead"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_check_circle"
            app:tint="#98A2B3"
            android:contentDescription="@string/mark_read"/>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_close"
            app:tint="#98A2B3"
            android:contentDescription="@string/close"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
