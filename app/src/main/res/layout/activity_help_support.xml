<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/help_support"
            android:textColor="#101828"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="24dp">

            <!-- Emergency Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FEECEC">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvEmergencyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/emergency_title"
                        android:textColor="#B42318"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvEmergencySub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/emergency_subtitle"
                        android:textColor="#F04438"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/tvEmergencyTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnEmergency"
                        android:layout_width="0dp"
                        android:layout_height="78dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F04438"
                        app:layout_constraintTop_toBottomOf="@id/tvEmergencySub"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <ImageView
                                android:id="@+id/ivEmergencyPhone"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="@string/call"
                                android:src="@drawable/ic_phone"
                                app:tint="#FFFFFF"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/tvEmergencyBtnTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/emergency_helpline"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"

                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="14dp"
                                app:layout_constraintStart_toEndOf="@id/ivEmergencyPhone"
                                app:layout_constraintEnd_toStartOf="@id/tvEmergencyNumber"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <!-- anchor helper id for above constraint -->
                            <View
                                android:id="@+id/ivEmergencyPhone_fake"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvEmergencyNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/emergency_number_block"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contact Support -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/contact_support"
                android:textColor="#101828"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Call -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxCall"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/call"
                            android:src="@drawable/ic_phone"
                            app:tint="#2563EB"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/call_support"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxCall"
                        app:layout_constraintTop_toTopOf="@id/boxCall"
                        app:layout_constraintEnd_toStartOf="@id/chevCall"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/helpline_available_247"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxCall"
                        app:layout_constraintTop_toBottomOf="@id/boxCall"
                        app:layout_constraintEnd_toStartOf="@id/chevCall"/>

                    <ImageView
                        android:id="@+id/chevCall"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Chat -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxChat"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/chat"
                            android:src="@drawable/ic_chat"
                            app:tint="#2563EB"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/chat_with_us"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxChat"
                        app:layout_constraintTop_toTopOf="@id/boxChat"
                        app:layout_constraintEnd_toStartOf="@id/chevChat"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/get_instant_help"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxChat"
                        app:layout_constraintTop_toBottomOf="@id/boxChat"
                        app:layout_constraintEnd_toStartOf="@id/chevChat"/>

                    <ImageView
                        android:id="@+id/chevChat"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Email -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxEmail"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/email"
                            android:src="@drawable/ic_mail"
                            app:tint="#7A5AF8"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/email_support"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxEmail"
                        app:layout_constraintTop_toTopOf="@id/boxEmail"
                        app:layout_constraintEnd_toStartOf="@id/chevEmail"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/support_email"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxEmail"
                        app:layout_constraintTop_toBottomOf="@id/boxEmail"
                        app:layout_constraintEnd_toStartOf="@id/chevEmail"/>

                    <ImageView
                        android:id="@+id/chevEmail"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Help Resources -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/help_resources"
                android:textColor="#101828"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- User Guide -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxGuide"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="14dp"
                        android:contentDescription="@string/user_guide"
                        android:src="@drawable/ic_book"
                        app:tint="#475467"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintStart_toStartOf="@id/boxGuide"
                        app:layout_constraintEnd_toEndOf="@id/boxGuide"
                        app:layout_constraintTop_toTopOf="@id/boxGuide"
                        app:layout_constraintBottom_toBottomOf="@id/boxGuide"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/user_guide"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxGuide"
                        app:layout_constraintTop_toTopOf="@id/boxGuide"
                        app:layout_constraintEnd_toStartOf="@id/chevGuide"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/learn_how_to_use_app"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxGuide"
                        app:layout_constraintTop_toBottomOf="@id/boxGuide"
                        app:layout_constraintEnd_toStartOf="@id/chevGuide"/>

                    <ImageView
                        android:id="@+id/chevGuide"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Video Tutorials -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxVideo"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/video_tutorials"
                        android:src="@drawable/ic_video"
                        app:tint="#475467"
                        app:layout_constraintStart_toStartOf="@id/boxVideo"
                        app:layout_constraintEnd_toEndOf="@id/boxVideo"
                        app:layout_constraintTop_toTopOf="@id/boxVideo"
                        app:layout_constraintBottom_toBottomOf="@id/boxVideo"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/video_tutorials"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxVideo"
                        app:layout_constraintTop_toTopOf="@id/boxVideo"
                        app:layout_constraintEnd_toStartOf="@id/chevVideo"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/watch_step_by_step_guides"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxVideo"
                        app:layout_constraintTop_toBottomOf="@id/boxVideo"
                        app:layout_constraintEnd_toStartOf="@id/chevVideo"/>

                    <ImageView
                        android:id="@+id/chevVideo"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAQs -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_outline_soft">

                    <FrameLayout
                        android:id="@+id/boxFaq"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/faqs"
                        android:src="@drawable/ic_book"
                        app:tint="#475467"
                        app:layout_constraintStart_toStartOf="@id/boxFaq"
                        app:layout_constraintEnd_toEndOf="@id/boxFaq"
                        app:layout_constraintTop_toTopOf="@id/boxFaq"
                        app:layout_constraintBottom_toBottomOf="@id/boxFaq"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/faqs"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxFaq"
                        app:layout_constraintTop_toTopOf="@id/boxFaq"
                        app:layout_constraintEnd_toStartOf="@id/chevFaq"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/common_questions_answered"
                        android:textColor="#667085"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxFaq"
                        app:layout_constraintTop_toBottomOf="@id/boxFaq"
                        app:layout_constraintEnd_toStartOf="@id/chevFaq"/>

                    <ImageView
                        android:id="@+id/chevFaq"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Common Issues -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/common_issues"
                android:textColor="#101828"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Issue 1 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/issueRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/issueQ1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_book_consultation"
                            android:textColor="#101828"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/issueArrow1"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/issueArrow1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#98A2B3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
