<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface_alt">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/header_bg"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:background="@drawable/bg_home_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/welcome_back_comma"
                android:textColor="#EAF2FF"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/header_bg"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:text=""
                tools:text="Ramesh"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_welcome"
                app:layout_constraintStart_toStartOf="parent" />

            <FrameLayout
                android:id="@+id/box_bell"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toTopOf="@id/header_bg"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E4E7EC">

                    <ImageView
                        android:id="@+id/iv_bell"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/notifications"
                        android:src="@drawable/ic_bell"
                        app:tint="@color/ss_brand" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_badge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_badge_red"
                    android:gravity="center"
                    android:text=""
                    tools:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ai_assistant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ai_highlight_card"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_ai_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="@string/ai_assistant"
                        android:src="@drawable/ic_bot_chat"
                        app:tint="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_ai_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/ai_assistant"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_ai_icon"
                        app:layout_constraintTop_toTopOf="@id/iv_ai_icon"
                        app:layout_constraintEnd_toStartOf="@id/btn_ai_assistant" />

                    <TextView
                        android:id="@+id/tv_ai_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/ai_assistant_sub"
                        android:textColor="#EAF1FF"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/iv_ai_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_ai_title"
                        app:layout_constraintEnd_toStartOf="@id/btn_ai_assistant" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ai_assistant"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/ask_assistant"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:background="@drawable/bg_btn_primary_blue"
                        android:textColor="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_emergency"
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/card_ai_assistant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/box_em_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F04438"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/emergency_call"
                            android:src="@drawable/ic_call"
                            app:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_em_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/emergency_call_now"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toEndOf="@id/box_em_icon"
                        app:layout_constraintTop_toTopOf="@id/box_em_icon"
                        app:layout_constraintEnd_toStartOf="@id/iv_arrow" />

                    <TextView
                        android:id="@+id/tv_em_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/no_internet_required"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toEndOf="@id/box_em_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_em_title"
                        app:layout_constraintEnd_toStartOf="@id/iv_arrow" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E6EEF6"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/card_emergency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/tv_need"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:text="@string/what_do_you_need"
                        android:textColor="#101828"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E4E7EC"
                        app:cardBackgroundColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/tv_need"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/box_book_icon"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E8F0FF"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/book_consultation"
                                    android:src="@drawable/ic_video"
                                    app:tint="@color/ss_brand" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tv_book_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="@string/book_consultation"
                                android:textColor="#101828"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_book_icon"
                                app:layout_constraintTop_toTopOf="@id/box_book_icon"
                                app:layout_constraintEnd_toStartOf="@id/iv_book_arrow" />

                            <TextView
                                android:id="@+id/tv_book_sub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="4dp"
                                android:text="@string/video_or_audio_call"
                                android:textColor="#667085"
                                android:textSize="13sp"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_book_icon"
                                app:layout_constraintTop_toBottomOf="@id/tv_book_title"
                                app:layout_constraintEnd_toStartOf="@id/iv_book_arrow" />

                            <ImageView
                                android:id="@+id/iv_book_arrow"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@string/open"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#98A2B3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E4E7EC"
                        app:cardBackgroundColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/card_book"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/box_med_icon"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F3E8FF"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/medicine_availability"
                                    android:src="@drawable/ic_pill"
                                    app:tint="#7A5AF8" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tv_med_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="@string/medicine_availability"
                                android:textColor="#101828"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_med_icon"
                                app:layout_constraintTop_toTopOf="@id/box_med_icon"
                                app:layout_constraintEnd_toStartOf="@id/iv_med_arrow" />

                            <TextView
                                android:id="@+id/tv_med_sub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="4dp"
                                android:text="@string/find_nearby_pharmacies"
                                android:textColor="#667085"
                                android:textSize="13sp"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_med_icon"
                                app:layout_constraintTop_toBottomOf="@id/tv_med_title"
                                app:layout_constraintEnd_toStartOf="@id/iv_med_arrow" />

                            <ImageView
                                android:id="@+id/iv_med_arrow"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@string/open"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#98A2B3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_records"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E4E7EC"
                        app:cardBackgroundColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/card_med"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/box_records_icon"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FFF7E6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/health_records"
                                    android:src="@drawable/ic_doc"
                                    app:tint="#B45309" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tv_records_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="@string/health_records"
                                android:textColor="#101828"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_records_icon"
                                app:layout_constraintTop_toTopOf="@id/box_records_icon"
                                app:layout_constraintEnd_toStartOf="@id/iv_records_arrow" />

                            <TextView
                                android:id="@+id/tv_records_sub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="4dp"
                                android:text="@string/view_prescriptions_and_reports"
                                android:textColor="#667085"
                                android:textSize="13sp"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/box_records_icon"
                                app:layout_constraintTop_toBottomOf="@id/tv_records_title"
                                app:layout_constraintEnd_toStartOf="@id/iv_records_arrow" />

                            <ImageView
                                android:id="@+id/iv_records_arrow"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@string/open"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#98A2B3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/upcoming_appointments"
                        android:textColor="#101828"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/card_records"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:text="@string/view_all"
                        android:textColor="@color/ss_brand"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/tv_upcoming"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_upcoming"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="14dp"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:paddingBottom="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_upcoming"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/item_patient_appointment" />

                    <TextView
                        android:id="@+id/tv_empty_upcoming"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/no_upcoming_appointments"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/rv_upcoming"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
