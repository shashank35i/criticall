<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="13sp"
        android:textColor="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvMedName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medicine"
        android:textStyle="bold"
        android:textSize="13.5sp"
        android:textColor="#101828"
        app:layout_constraintStart_toEndOf="@id/tvIndex"
        app:layout_constraintTop_toTopOf="@id/tvIndex"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvMedLine1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instruction"
        android:textSize="13sp"
        android:textColor="#101828"
        app:layout_constraintStart_toStartOf="@id/guidelineRight"
        app:layout_constraintTop_toTopOf="@id/tvMedName"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="4"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvMedLine2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meta"
        android:textSize="12sp"
        android:textColor="#667085"
        app:layout_constraintStart_toStartOf="@id/tvMedLine1"
        app:layout_constraintTop_toBottomOf="@id/tvMedLine1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F2F4F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
