<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aiSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ai_sheet_dark"
    android:padding="12dp">

    <FrameLayout
        android:id="@+id/aiHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/aiHeaderGlow"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:alpha="0.0"
            android:background="@drawable/bg_ai_header_glow" />

        <LinearLayout
            android:id="@+id/aiHeaderRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI Assistant"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvOfflineMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="T5 Model"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/bg_chip_outline_dark" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvDisclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Not medical advice. Contact doctor for HIGH risk."
        android:textColor="@color/gray_light"
        android:textSize="11sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Ask about your risk, precautions, lifestyle tips, or when to seek care. The assistant uses your latest risk data."
        android:textColor="@color/white"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="84dp" />

    <LinearLayout
        android:id="@+id/aiStateRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.simats.criticall.ai.VoiceWaveView
            android:id="@+id/voiceWaveView"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/listeningLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Listening..."
            android:textColor="@color/gray_light"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.simats.criticall.ai.TypingDotsView
            android:id="@+id/typingDotsView"
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerAnalyzing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAnalyzing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzing..."
                android:textColor="@color/gray_light"
                android:textSize="12sp" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/chipSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp" />
    </HorizontalScrollView>

    <!-- Placeholder speaker (kept only because id exists in your old XML; code hides it) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpeak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- ChatGPT composer (mic right when empty; send right when typing) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/etChatInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/bg_chatgpt_input_pill_dark"
            android:paddingStart="16dp"
            android:paddingEnd="64dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_light"
            android:hint="Ask about risk or precautions"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:imeOptions="actionSend" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMic"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="6dp"
            android:text=""
            android:background="@drawable/bg_icon_pill_button_dark"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="44dp"
            android:minHeight="44dp"
            app:icon="@drawable/ic_mic_24"
            app:iconSize="20dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendChat"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="6dp"
            android:text=""
            android:background="@drawable/bg_send_button_inside_pill_dark"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="44dp"
            android:minHeight="44dp"
            android:visibility="gone"
            app:icon="@drawable/ic_send_24"
            app:iconSize="20dp"
            app:iconTint="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearChat"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Clear chat"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/bg_clear_link_chip_dark"
            android:textColor="@color/gray_light"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </LinearLayout>

</LinearLayout>
