<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface_alt">

    <!--  Fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ss_surface_alt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--  Professional Bottom Nav Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:backgroundTint="#FFFFFF"
        app:cardElevation="10dp"
        app:cardCornerRadius="22dp"
        app:strokeColor="#F2F4F7"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- internal padding so nav looks floating + premium -->
        <LinearLayout
            android:id="@+id/navRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- ================= HOME ================= -->
            <FrameLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <!-- pill bg (selected) -->
                <View
                    android:id="@+id/vHomePill"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_nav_selected"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNavHome"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/home"
                        app:srcCompat="@drawable/ic_home"
                        app:tint="#3B82F6" />

                    <TextView
                        android:id="@+id/tvNavHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#3B82F6" />
                </LinearLayout>
            </FrameLayout>

            <!-- ================= STOCK ================= -->
            <FrameLayout
                android:id="@+id/navStock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/vStockPill"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_nav_selected"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNavStock"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/stock"
                        app:srcCompat="@drawable/ic_box"
                        app:tint="#667085" />

                    <TextView
                        android:id="@+id/tvNavStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/stock"
                        android:textSize="12sp"
                        android:textColor="#667085" />
                </LinearLayout>
            </FrameLayout>

            <!-- ================= REQUESTS ================= -->
            <FrameLayout
                android:id="@+id/navRequests"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/vRequestsPill"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_nav_selected"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNavRequests"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/requests"
                        app:srcCompat="@drawable/ic_clipboard"
                        app:tint="#667085" />

                    <TextView
                        android:id="@+id/tvNavRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/requests"
                        android:textSize="12sp"
                        android:textColor="#667085" />
                </LinearLayout>
            </FrameLayout>

            <!-- ================= PROFILE ================= -->
            <FrameLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/vProfilePill"
                    android:layout_width="76dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_nav_selected"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNavProfile"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/profile"
                        app:srcCompat="@drawable/ic_user"
                        app:tint="#667085" />

                    <TextView
                        android:id="@+id/tvNavProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/profile"
                        android:textSize="12sp"
                        android:textColor="#667085" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
