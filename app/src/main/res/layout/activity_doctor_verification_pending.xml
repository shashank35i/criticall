<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Divider -->
    <View
        android:id="@+id/vTopDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Center icon bg -->
    <View
        android:id="@+id/vIconBg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/bg_pending_icon"
        app:layout_constraintTop_toBottomOf="@id/vTopDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Clock icon -->
    <ImageView
        android:id="@+id/ivClock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/pending"
        app:srcCompat="@drawable/ic_clock"
        app:tint="#EA580C"
        app:layout_constraintTop_toTopOf="@id/vIconBg"
        app:layout_constraintBottom_toBottomOf="@id/vIconBg"
        app:layout_constraintStart_toStartOf="@id/vIconBg"
        app:layout_constraintEnd_toEndOf="@id/vIconBg"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_pending"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/vIconBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verification_desc_doc"
        android:textSize="14sp"
        android:textColor="#667085"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Status labels -->
    <TextView
        android:id="@+id/tvSubmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitted"
        android:textSize="12sp"
        android:textColor="#667085"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvUnderReview"
        app:layout_constraintHorizontal_bias="0.33"/>

    <TextView
        android:id="@+id/tvUnderReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/under_review"
        android:textSize="12sp"
        android:textColor="#667085"
        app:layout_constraintTop_toTopOf="@id/tvSubmitted"
        app:layout_constraintStart_toEndOf="@id/tvSubmitted"
        app:layout_constraintEnd_toStartOf="@id/tvVerified"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tvVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verified"
        android:textSize="12sp"
        android:textColor="#667085"
        app:layout_constraintTop_toTopOf="@id/tvSubmitted"
        app:layout_constraintStart_toEndOf="@id/tvUnderReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"/>

    <!-- Progress bg -->
    <View
        android:id="@+id/vProgressBg"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_progress_inactive"
        app:layout_constraintTop_toBottomOf="@id/tvSubmitted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress active -->
    <View
        android:id="@+id/vProgressActive"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_progress_orange"
        app:layout_constraintTop_toTopOf="@id/vProgressBg"
        app:layout_constraintBottom_toBottomOf="@id/vProgressBg"
        app:layout_constraintStart_toStartOf="@id/vProgressBg"
        app:layout_constraintEnd_toStartOf="@id/vProgressBg"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Info card -->
    <View
        android:id="@+id/vInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_info_card"
        app:layout_constraintTop_toBottomOf="@id/vProgressBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_next"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/vInfoCard"
        app:layout_constraintStart_toStartOf="@id/vInfoCard"/>

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/info_1"
        android:textSize="13sp"
        android:textColor="#475467"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfoTitle"
        app:layout_constraintStart_toStartOf="@id/vInfoCard"
        app:layout_constraintEnd_toEndOf="@id/vInfoCard"/>

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/info_2"
        android:textSize="13sp"
        android:textColor="#475467"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo1"
        app:layout_constraintStart_toStartOf="@id/vInfoCard"
        app:layout_constraintEnd_toEndOf="@id/vInfoCard"/>

    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/info_3"
        android:textSize="13sp"
        android:textColor="#475467"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo2"
        app:layout_constraintStart_toStartOf="@id/vInfoCard"
        app:layout_constraintEnd_toEndOf="@id/vInfoCard"/>

    <!-- Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCheckStatus"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/check_status"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#101828"
        android:background="@drawable/bg_button_soft"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
