<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E4E7EC"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"

        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/tvMedName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#101828"
            android:textSize="16sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFF7ED"
            app:strokeWidth="1dp"
            app:strokeColor="#FED7AA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMedName">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/ivChipIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_stock_low"
                    app:tint="#B45309"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tvChipText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#B45309"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toEndOf="@id/ivChipIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Controls row -->
        <LinearLayout
            android:id="@+id/rowControls"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/chipStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinusBig"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:minWidth="52dp"
                android:minHeight="52dp"
                android:padding="0dp"
                android:text=""
                android:foreground="?attr/selectableItemBackground"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3"
                android:stateListAnimator="@null"
                android:outlineProvider="none"
                app:elevation="0dp"
                android:translationZ="0dp"
                android:backgroundTint="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"

                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#F7F8FA"

                app:icon="@drawable/ic_minus_24"
                app:iconTint="#475467"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconGravity="textTop"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinusOne"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:minWidth="52dp"
                android:minHeight="52dp"
                android:padding="0dp"
                android:gravity="center"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3"
                android:stateListAnimator="@null"
                android:outlineProvider="none"
                app:elevation="0dp"
                android:translationZ="0dp"
                android:backgroundTint="#FFFFFF"
                android:textAlignment="center"
                android:text="-1"
                android:textAllCaps="false"
                android:textColor="#101828"
                android:textSize="15sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:foreground="?attr/selectableItemBackground"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/boxQty"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF">

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    app:materialThemeOverlay="@style/ThemeOverlay.Material3"
                    android:stateListAnimator="@null"
                    android:outlineProvider="none"
                    app:elevation="0dp"
                    android:translationZ="0dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#101828"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlusOne"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:minWidth="52dp"
                android:minHeight="52dp"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3"
                android:stateListAnimator="@null"
                android:outlineProvider="none"
                app:elevation="0dp"
                android:translationZ="0dp"
                android:backgroundTint="#FFFFFF"
                android:padding="0dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="+1"
                android:textAllCaps="false"
                android:textColor="#101828"
                android:textSize="15sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:foreground="?attr/selectableItemBackground"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlusBig"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:minWidth="52dp"

                app:materialThemeOverlay="@style/ThemeOverlay.Material3"
                android:stateListAnimator="@null"
                android:outlineProvider="none"
                app:elevation="0dp"
                android:translationZ="0dp"
                android:backgroundTint="#FFFFFF"
                android:minHeight="52dp"
                android:padding="0dp"
                android:text=""
                android:foreground="?attr/selectableItemBackground"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:icon="@drawable/ic_plus_24"
                app:iconTint="#475467"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconGravity="textTop"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
