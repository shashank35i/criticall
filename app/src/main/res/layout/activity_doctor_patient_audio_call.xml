<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_call_gradient">

    <!-- Connection status pill -->
    <View
        android:id="@+id/vConnectionBg"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/bg_connection"

        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"

        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivWifi"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_wifi"
        app:tint="#FFFFFF"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="@id/vConnectionBg"
        app:layout_constraintTop_toTopOf="@id/vConnectionBg"
        app:layout_constraintBottom_toBottomOf="@id/vConnectionBg"/>

    <TextView
        android:id="@+id/tvConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Call â€¢ Good Connection"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/ivWifi"
        app:layout_constraintTop_toTopOf="@id/vConnectionBg"
        app:layout_constraintBottom_toBottomOf="@id/vConnectionBg"/>

    <!-- Avatar ring -->
    <View
        android:id="@+id/vOuterRing"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_avatar_ring"
        app:layout_constraintTop_toBottomOf="@id/vConnectionBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar -->
    <View
        android:id="@+id/vAvatar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_avatar_white"
        app:layout_constraintTop_toTopOf="@id/vOuterRing"
        app:layout_constraintBottom_toBottomOf="@id/vOuterRing"
        app:layout_constraintStart_toStartOf="@id/vOuterRing"
        app:layout_constraintEnd_toEndOf="@id/vOuterRing"/>

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/ic_doctor_avatar"
        app:layout_constraintTop_toTopOf="@id/vAvatar"
        app:layout_constraintBottom_toBottomOf="@id/vAvatar"
        app:layout_constraintStart_toStartOf="@id/vAvatar"
        app:layout_constraintEnd_toEndOf="@id/vAvatar"/>

    <!-- Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Rajesh Kumar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/vOuterRing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Specialization -->
    <TextView
        android:id="@+id/tvSpec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Physician"
        android:textSize="14sp"
        android:textColor="#DBEAFE"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Call duration -->
    <View
        android:id="@+id/vTimerBg"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_timer"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:45"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/vTimerBg"
        app:layout_constraintBottom_toBottomOf="@id/vTimerBg"
        app:layout_constraintStart_toStartOf="@id/vTimerBg"
        app:layout_constraintEnd_toEndOf="@id/vTimerBg"/>

    <!-- Voice bars -->
    <ImageView
        android:id="@+id/ivWave"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/ic_voice_wave"
        app:tint="#BFDBFE"
        app:layout_constraintTop_toBottomOf="@id/vTimerBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom control bar -->
    <View
        android:id="@+id/vBottomBar"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@drawable/bg_call_controls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Speaker -->
    <ImageView
        android:id="@+id/btnSpeaker"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_control"
        app:srcCompat="@drawable/ic_speaker"
        app:tint="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/vBottomBar"
        app:layout_constraintEnd_toStartOf="@id/btnMic"
        app:layout_constraintTop_toTopOf="@id/vBottomBar"
        app:layout_constraintBottom_toBottomOf="@id/vBottomBar"
        app:layout_constraintHorizontal_bias="0.2"/>

    <!-- Mic -->
    <ImageView
        android:id="@+id/btnMic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_control"
        app:srcCompat="@drawable/ic_mic"
        app:tint="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/btnSpeaker"
        app:layout_constraintEnd_toStartOf="@id/btnEnd"
        app:layout_constraintTop_toTopOf="@id/vBottomBar"
        app:layout_constraintBottom_toBottomOf="@id/vBottomBar"/>

    <!-- End -->
    <ImageView
        android:id="@+id/btnEnd"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/bg_end_call"
        app:srcCompat="@drawable/ic_end_call"
        app:tint="#FFFFFF"
        android:padding="13dp"
        app:layout_constraintStart_toEndOf="@id/btnMic"
        app:layout_constraintEnd_toStartOf="@id/btnChat"
        app:layout_constraintTop_toTopOf="@id/vBottomBar"
        app:layout_constraintBottom_toBottomOf="@id/vBottomBar"/>

    <!-- Chat -->
    <ImageView
        android:id="@+id/btnChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_control"
        app:srcCompat="@drawable/ic_chat"
        app:tint="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/btnEnd"
        app:layout_constraintEnd_toEndOf="@id/vBottomBar"
        app:layout_constraintTop_toTopOf="@id/vBottomBar"
        app:layout_constraintBottom_toBottomOf="@id/vBottomBar"
        app:layout_constraintHorizontal_bias="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>
