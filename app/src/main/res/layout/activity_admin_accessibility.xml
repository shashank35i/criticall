<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accessibility"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E4E7EC"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accessibility Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize the app to suit your needs"
        android:textSize="14sp"
        android:textColor="#667085"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- LARGE TEXT CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLargeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icLargeText"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_blue"
                android:src="@drawable/ic_text"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvLargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#101828"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icLargeText"
                app:layout_constraintTop_toTopOf="@id/icLargeText"/>

            <TextView
                android:id="@+id/tvLargeTextSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Increase text size"
                android:textSize="14sp"
                android:textColor="#667085"
                app:layout_constraintStart_toStartOf="@id/tvLargeText"
                app:layout_constraintTop_toBottomOf="@id/tvLargeText"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- HIGH CONTRAST CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContrast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardLargeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icContrast"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_purple"
                android:src="@drawable/ic_eye"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvContrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Contrast"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icContrast"
                app:layout_constraintTop_toTopOf="@id/icContrast"/>

            <TextView
                android:id="@+id/tvContrastSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Improve visibility"
                android:textSize="14sp"
                android:textColor="#667085"
                app:layout_constraintStart_toStartOf="@id/tvContrast"
                app:layout_constraintTop_toBottomOf="@id/tvContrast"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchContrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- VOICE GUIDANCE CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardContrast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icVoice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_green"
                android:src="@drawable/ic_speaker"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice Guidance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icVoice"
                app:layout_constraintTop_toTopOf="@id/icVoice"/>

            <TextView
                android:id="@+id/tvVoiceSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read screen content"
                android:textSize="14sp"
                android:textColor="#667085"
                app:layout_constraintStart_toStartOf="@id/tvVoice"
                app:layout_constraintTop_toBottomOf="@id/tvVoice"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- SAVE BUTTON -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Save Settings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2563EB"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
