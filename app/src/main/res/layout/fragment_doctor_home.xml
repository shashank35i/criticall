<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface_alt">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <View
                    android:id="@+id/headerBg"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@drawable/bg_role_header_doctor" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E4E7EC">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F2F4F7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imgAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/ic_doctor_face"
                                android:contentDescription="@null" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvDoctorName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/default_doctor_name"
                            android:textColor="#101828"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/cardAvatar"
                            app:layout_constraintTop_toTopOf="@id/cardAvatar"
                            app:layout_constraintEnd_toStartOf="@id/icVerified" />

                        <ImageView
                            android:id="@+id/icVerified"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/ic_verified_shield"
                            app:layout_constraintStart_toEndOf="@id/tvDoctorName"
                            app:layout_constraintTop_toTopOf="@id/tvDoctorName"
                            app:layout_constraintEnd_toStartOf="@id/notificationWrap"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvDoctorRole"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/default_doctor_role"
                            android:textColor="#667085"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/cardAvatar"
                            app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                            app:layout_constraintEnd_toStartOf="@id/notificationWrap" />

                        <FrameLayout
                            android:id="@+id/notificationWrap"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F2F4F7">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bell"
                                    android:contentDescription="@null"
                                    app:tint="#2563EB" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvBadge"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/bg_badge_red"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvTodayLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/today"
                            android:textColor="#667085"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cardAvatar" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardToday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="92dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E4E7EC"
                            app:cardBackgroundColor="#FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/cardTotal"
                            app:layout_constraintTop_toBottomOf="@id/tvTodayLabel">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/icToday"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_calendar"
                                    android:contentDescription="@null"
                                    app:tint="#2563EB"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvPatients"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/doctor_patients_fmt"
                                    android:textColor="#101828"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/icToday" />

                                <TextView
                                    android:id="@+id/tvCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/doctor_completed_fmt"
                                    android:textColor="#667085"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvPatients" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="92dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E4E7EC"
                            app:cardBackgroundColor="#FFFFFF"
                            app:layout_constraintStart_toEndOf="@id/cardToday"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cardToday">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/icTrend"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_trend_white"
                                    android:contentDescription="@null"
                                    app:tint="#2563EB"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/doctor_amount_fmt"
                                    android:textColor="#101828"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/icTrend" />

                                <TextView
                                    android:id="@+id/tvTotalLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="@string/total"
                                    android:textColor="#667085"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    app:layout_constraintStart_toEndOf="@id/icTrend"
                                    app:layout_constraintTop_toTopOf="@id/icTrend" />

                                <TextView
                                    android:id="@+id/tvRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/doctor_rating_fmt"
                                    android:textColor="#667085"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="18dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvTodayAppt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/todays_appointments"
                    android:textColor="#101828"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="#2563EB"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvStartingIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/starting_unknown"
                        android:textColor="#667085"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPatientImg"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F2F4F7"
                        app:layout_constraintTop_toBottomOf="@id/tvStartingIn"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_user"
                            app:tint="#2563EB"
                            android:contentDescription="@null" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/default_patient_name"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/cardPatientImg"
                        app:layout_constraintTop_toTopOf="@id/cardPatientImg"
                        app:layout_constraintEnd_toStartOf="@id/btnStart" />

                    <TextView
                        android:id="@+id/tvPatientMeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/default_patient_meta"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/cardPatientImg"
                        app:layout_constraintTop_toBottomOf="@id/tvPatientName"
                        app:layout_constraintEnd_toStartOf="@id/btnStart" />

                    <TextView
                        android:id="@+id/tvPatientIssue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/default_patient_issue"
                        android:textColor="#475467"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardPatientImg"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--:--"
                        android:textColor="#101828"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPatientIssue" />

                    <TextView
                        android:id="@+id/tagVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text=""
                        android:textColor="#2563EB"
                        android:textSize="12sp"
                        android:background="@drawable/bg_chip"
                        app:layout_constraintStart_toEndOf="@id/tvTime"
                        app:layout_constraintTop_toTopOf="@id/tvTime" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStart"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/start"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#2563EB"
                        app:layout_constraintTop_toTopOf="@id/cardPatientImg"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAppt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/p2Img"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_user"
                        app:tint="#2563EB"
                        android:contentDescription="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/p2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/default_patient_name"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/p2Img"
                        app:layout_constraintTop_toTopOf="@id/p2Img"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p2Meta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/default_patient_meta"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/p2Img"
                        app:layout_constraintTop_toBottomOf="@id/p2Name"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p2Issue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/default_patient_issue"
                        android:textColor="#475467"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/p2Img"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="--:--"
                        android:textColor="#101828"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/p2Issue" />

                    <TextView
                        android:id="@+id/tagAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text=""
                        android:textColor="#2563EB"
                        android:textSize="12sp"
                        android:background="@drawable/bg_chip"
                        app:layout_constraintStart_toEndOf="@id/p2Time"
                        app:layout_constraintTop_toTopOf="@id/p2Time" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAppt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/p3Img"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_user"
                        app:tint="#2563EB"
                        android:contentDescription="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/p3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/default_patient_name"
                        android:textColor="#101828"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/p3Img"
                        app:layout_constraintTop_toTopOf="@id/p3Img"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p3Meta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/default_patient_meta"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/p3Img"
                        app:layout_constraintTop_toBottomOf="@id/p3Name"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p3Issue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/default_patient_issue"
                        android:textColor="#475467"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/p3Img"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/p3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="--:--"
                        android:textColor="#101828"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/p3Issue" />

                    <TextView
                        android:id="@+id/tagVideo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text=""
                        android:textColor="#2563EB"
                        android:textSize="12sp"
                        android:background="@drawable/bg_chip"
                        app:layout_constraintStart_toEndOf="@id/p3Time"
                        app:layout_constraintTop_toTopOf="@id/p3Time" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvQuick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/quick_actions"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/quickActionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMyPatients"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E4E7EC"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/icMyPatients"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_patients_gray"
                            app:tint="#2563EB"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvMyPatientsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/my_patients"
                            android:textColor="#101828"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMyPatientsSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/view_patient_records"
                            android:textColor="#667085"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSchedule"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E4E7EC"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/icSchedule"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#2563EB"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvScheduleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/schedule"
                            android:textColor="#101828"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvScheduleSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/available_slots"
                            android:textColor="#667085"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
