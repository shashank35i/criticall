<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="#F2F4F7"
        app:strokeWidth="1dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDlgTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/request_and_call"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDlgSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/select_medicine"
                android:textColor="#667085"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="#F2F4F7" />

            <TextView
                android:id="@+id/tvDlgMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Paracetamol 500mg"
                android:textColor="#101828"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Quantity picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_request_info"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="#667085"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMinus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:text="âˆ’"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:textColor="#2563EB"
                    app:strokeColor="#BFDBFE"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF" />

                <EditText
                    android:id="@+id/etQty"
                    android:layout_width="64dp"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/bg_qty_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#101828"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:textColor="#2563EB"
                    app:strokeColor="#BFDBFE"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#2563EB"
                    android:background="@drawable/bg_button_outline_green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCall"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/call"
                    android:textAllCaps="false"
                    android:textColor="#EBE6E6"
                    android:background="@drawable/bg_button_green" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
