<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- ICON -->
    <ImageView
        android:id="@+id/icType"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon_blue"
        android:padding="10dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Appointment Request"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#101828"
        app:layout_constraintStart_toEndOf="@id/icType"
        app:layout_constraintTop_toTopOf="@id/icType"
        app:layout_constraintEnd_toStartOf="@id/btnClose"
        android:layout_marginStart="12dp"/>

    <!-- STATUS DOT -->
    <View
        android:id="@+id/dotUnread"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_dot_green"
        app:layout_constraintTop_toTopOf="@id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CLOSE -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toBottomOf="@id/dotUnread"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MESSAGE -->
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ramesh Kumar has booked a video consultation for 4:00 PM today"
        android:textSize="14sp"
        android:textColor="#475467"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintEnd_toStartOf="@id/btnClose"
        android:layout_marginTop="4dp"/>

    <!-- TIME -->
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 min ago"
        android:textSize="12sp"
        android:textColor="#98A2B3"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtMessage"
        android:layout_marginTop="8dp"/>

    <!-- ACTION -->
    <TextView
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Schedule"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#0C9A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
