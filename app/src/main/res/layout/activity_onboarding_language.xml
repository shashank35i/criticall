<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollLanguages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <FrameLayout
                android:id="@+id/lang_icon_container"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_lang_icon">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_language"
                    app:tint="#2563EB"/>
            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/choose_language_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#101828"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/choose_language_subtitle"
                android:textSize="14sp"
                android:textColor="#667085"/>

            <!-- English -->
            <LinearLayout
                android:id="@+id/card_english"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="28dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card_selected">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_uk"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_english"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"/>
            </LinearLayout>

            <!-- Hindi -->
            <LinearLayout
                android:id="@+id/card_hindi"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_india"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hindi_native"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hindi"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_hindi"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Tamil -->
            <LinearLayout
                android:id="@+id/card_tamil"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_india"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tamil_native"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tamil"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_tamil"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Kannada -->
            <LinearLayout
                android:id="@+id/card_kannada"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_india"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kannada_native"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kannada"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_kannada"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Telugu -->
            <LinearLayout
                android:id="@+id/card_telugu"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_india"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telugu_native"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telugu"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_telugu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Malayalam -->
            <LinearLayout
                android:id="@+id/card_malayalam"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_lang_card">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_flag_india"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/malayalam_native"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#101828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/malayalam"
                        android:textSize="14sp"
                        android:textColor="#667085"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/check_icon_malayalam"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="invisible"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="@string/continue_arrow"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_continue_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
