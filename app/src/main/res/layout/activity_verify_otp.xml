<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Top bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_back_arrow"
                    app:tint="@color/ss_text_primary" />

                <TextView
                    android:id="@+id/tv_top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/verify_otp_top_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ss_text_primary" />
            </RelativeLayout>

            <!-- Shield icon circle -->
            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="34dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_icon_circle_green">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_verified_shield"
                    app:tint="@color/ss_brand" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:text="@string/verify_otp_heading"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/ss_text_primary" />

            <!-- Subtitle (set from code with real email) -->
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="32dp"
                android:gravity="center"
                android:text="@string/verify_otp_subtitle_placeholder"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/ss_text_secondary" />

            <!-- OTP boxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_otp_1"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"

                    android:maxLength="1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_otp_2"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_otp_3"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_otp_4"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_otp_5"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_otp_6"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_otp_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Verify button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="22dp"
                android:text="@string/verify_otp_btn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_continue_btn" />

            <!-- Resend -->
            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:text="@string/otp_resend_in_57"
                android:textSize="14sp"
                android:textColor="@color/ss_brand" />

        </LinearLayout>
    </ScrollView>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/ss_surface_alt">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/loading"
                android:textColor="@color/ss_text_primary"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
