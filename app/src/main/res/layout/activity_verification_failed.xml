<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Error icon background -->
    <View
        android:id="@+id/vErrorBg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_error_icon"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Error icon -->
    <ImageView
        android:id="@+id/ivError"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_error_cross"
        app:tint="#F04438"
        app:layout_constraintTop_toTopOf="@id/vErrorBg"
        app:layout_constraintBottom_toBottomOf="@id/vErrorBg"
        app:layout_constraintStart_toStartOf="@id/vErrorBg"
        app:layout_constraintEnd_toEndOf="@id/vErrorBg"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verification Rejected"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/vErrorBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unfortunately, we couldn't verify your documents. Please review the reason and try again."
        android:textSize="14sp"
        android:textColor="#667085"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Reason box -->
    <View
        android:id="@+id/vReason"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_error_reason"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reason:\nDocuments unclear"
        android:textSize="14sp"
        android:textColor="#F04438"
        android:lineSpacingExtra="6dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/vReason"
        app:layout_constraintStart_toStartOf="@id/vReason"
        app:layout_constraintEnd_toEndOf="@id/vReason"/>

    <!-- Reupload button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReupload"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Re-upload Documents"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingStart="70dp"
        android:drawableTint="@color/white"
        android:paddingEnd="60dp"
        android:drawableStart="@drawable/ic_doc"
        android:background="@drawable/bg_button_green"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contact support -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSupport"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Contact Support"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:background="@drawable/bg_button_gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
