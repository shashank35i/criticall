<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface_alt"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/rootProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#101828"
            android:paddingBottom="10dp" />

        <!-- GREEN HEADER CARD -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:padding="16dp"
            android:background="@drawable/bg_profile_header">

            <!-- PROFILE ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_avatar_white"
                    android:padding="12dp"
                    android:contentDescription="@string/profile_avatar"
                    android:src="@drawable/ic_user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Primary name field (your Patient fragment may update tvName) -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_user_name"
                        android:textColor="#101828"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Optional: if store uses tvUserName -->
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_user_name"
                        android:textColor="#101828"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_user_email"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                    <!-- Phone (your Patient fragment may update tvPhone + tvUserPhone) -->
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvUserPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_user_phone"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                    <!-- Verified / Active badge -->
                    <LinearLayout
                        android:id="@+id/verifiedRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_verified_badge"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/verified"
                            android:src="@drawable/ic_verified" />

                        <TextView
                            android:id="@+id/tvVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/active_user"
                            android:textColor="#2563EB"
                            android:textSize="12sp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/edit_profile"
                    android:textColor="#2563EB"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_outline_gray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnShareApp"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/share_app"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_primary_blue" />
            </LinearLayout>
        </LinearLayout>

        <!-- SETTINGS TITLE -->
        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#101828"
            android:layout_marginTop="18dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />

        <!-- SETTINGS LIST -->
        <LinearLayout
            android:id="@+id/settingsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="12dp">

            <!-- CHANGE LANGUAGE -->
            <LinearLayout
                android:id="@+id/vLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_setting_item"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/change_language"
                    android:src="@drawable/ic_language" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_language"
                        android:textColor="#101828"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvLanguageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_language"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/open"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- NOTIFICATIONS -->
            <LinearLayout
                android:id="@+id/vNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_setting_item"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/notifications"
                    android:src="@drawable/ic_bell" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        android:textColor="#101828"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/on"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/open"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- PRIVACY -->
            <LinearLayout
                android:id="@+id/vPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_setting_item"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/privacy_security"
                    android:src="@drawable/ic_shield" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/privacy_security"
                    android:textColor="#101828"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/open"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- HELP -->
            <LinearLayout
                android:id="@+id/vHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_setting_item"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/help_support"
                    android:src="@drawable/ic_help" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/help_support"
                    android:textColor="#101828"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/open"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- LOGOUT -->
            <LinearLayout
                android:id="@+id/vLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_logout"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/logout"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:textColor="#F04438"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- FOOTER -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version_footer"
            android:textSize="12sp"
            android:textColor="#98A2B3"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="10dp" />

    </LinearLayout>
</ScrollView>
