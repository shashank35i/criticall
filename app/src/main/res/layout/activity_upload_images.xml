<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top bar -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back_arrow"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="20dp"
        android:text="@string/upload_images_title"
        android:textColor="#101828"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/btnSkipTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="18dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"

        android:paddingBottom="6dp"
        android:text="@string/skip"
        android:textColor="#2563EB"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom button -->


    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">

            <!-- Description -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/upload_images_desc"
                android:textColor="#667085"
                android:textSize="15sp" />

            <!-- Examples box -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardExamples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="#EEF6FF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/bg_examples_outline">

                    <TextView
                        android:id="@+id/tvExamplesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/examples"
                        android:textColor="#1E3A8A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Chips row 1 -->
                    <TextView
                        android:id="@+id/chipExample1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_chip_pill_blue"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/example_skin_condition"
                        android:textColor="#2563EB"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvExamplesLabel" />

                    <TextView
                        android:id="@+id/chipExample2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_chip_pill_blue"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/example_previous_prescription"
                        android:textColor="#2563EB"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/chipExample1"
                        app:layout_constraintTop_toTopOf="@id/chipExample1" />

                    <!-- Chip row 2 -->
                    <TextView
                        android:id="@+id/chipExample3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_chip_pill_blue"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/example_test_reports"
                        android:textColor="#2563EB"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/chipExample1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Upload area (dashed) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boxUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_dashed_dropzone"
                android:padding="22dp">

                <!-- Center icon box -->
                <FrameLayout
                    android:id="@+id/iconBox"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:background="@drawable/bg_icon_square_soft"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/ivUploadIcon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image_outline"
                        app:tint="#98A2B3" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvNoImagesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/no_images_uploaded"
                    android:textColor="#101828"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/iconBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNoImagesSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/tap_buttons_to_add"
                    android:textColor="#667085"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tvNoImagesTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Buttons row -->
                <!-- Take Photo (Card button) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#2563EB"
                    app:layout_constraintTop_toBottomOf="@id/tvNoImagesSub"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnGallery"

                    app:layout_constraintWidth_percent="0.46">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_camera"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/take_photo"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <!-- Gallery (Card button) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnGallery"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E4E7EC"
                    app:layout_constraintTop_toBottomOf="@id/tvNoImagesSub"
                    app:layout_constraintStart_toEndOf="@id/btnTakePhoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.46">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_gallery"
                            app:tint="#475467" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/gallery"
                            android:textColor="#101828"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Spacer so content breathes like screenshot -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
