<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- LEFT (AI/OFFLINE) -->
    <LinearLayout
        android:id="@+id/leftWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:paddingStart="2dp"
        android:paddingEnd="44dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/leftBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_bubble_ai_dark"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvMsgLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:maxWidth="280dp"
                    android:includeFontPadding="false" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/rowActionsLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:singleLine="false"
                    app:chipSpacingHorizontal="6dp"
                    app:chipSpacingVertical="6dp"
                    android:gravity="start" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpeakMessage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:text=""
                android:background="@drawable/bg_icon_ghost_button_dark"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="36dp"
                android:minHeight="36dp"
                app:icon="@drawable/ic_volume_24"
                app:iconTint="@color/white"
                app:iconSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMetaLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Offline"
            android:textColor="@color/gray_light"
            android:textSize="11sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- RIGHT (PATIENT) -->
    <LinearLayout
        android:id="@+id/rightWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:paddingStart="44dp"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/tvMsgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_patient_dark"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxWidth="280dp"
            android:includeFontPadding="false" />

    </LinearLayout>

</FrameLayout>
