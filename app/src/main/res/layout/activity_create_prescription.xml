<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="@string/create_prescription"
                    android:textColor="#101828"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F4F7" />

            <!-- Patient Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#F2F4F7"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#F6F8FB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DBEAFE">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ðŸ‘¨"
                            android:textSize="18sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPatientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ramesh Kumar"
                            android:textColor="#101828"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPatientMeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="45 yrs, Male â€¢ Ludhiana Village"
                            android:textColor="#667085"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Diagnosis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diagnosis"
                    android:textColor="#475467"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#F04438"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/bg_cp_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#101828"
                    android:textSize="18sp"
                    android:hint=""
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Medicines header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicines"
                        android:textColor="#475467"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="#F04438"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAddMedicineTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_plus"
                        android:contentDescription="@string/add_medicine"
                        app:tint="@android:color/holo_green_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/add_medicine"
                        android:textColor="#3B82F6"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Added meds list (optional) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAddedMeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:overScrollMode="never" />

            <!-- Add Medicine Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#F2F4F7"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_medicine"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/medicine_name"
                        android:textColor="#475467"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMedName"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:background="@drawable/bg_cp_field"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:hint="@string/search_or_type_medicine"
                            android:textColor="#101828"
                            android:textColorHint="#98A2B3"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cgSuggestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:singleLine="false"
                        app:chipSpacingHorizontal="10dp"
                        app:chipSpacingVertical="10dp">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paracetamol 500mg"
                            app:chipBackgroundColor="#F2F4F7"
                            android:textColor="#475467" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cetirizine 10mg"
                            app:chipBackgroundColor="#F2F4F7"
                            android:textColor="#475467" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Azithromycin 500mg"
                            app:chipBackgroundColor="#F2F4F7"
                            android:textColor="#475467" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Omeprazole 20mg"
                            app:chipBackgroundColor="#F2F4F7"
                            android:textColor="#475467" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Dosage + Frequency -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dosage"
                                android:textColor="#475467"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!--  FIX: dropdown_menu requires outlined/filled (NOT boxBackgroundMode="none") -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:endIconMode="dropdown_menu"
                                app:endIconTint="#98A2B3"
                                app:hintEnabled="false"

                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxStrokeColor="@android:color/transparent"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/ddDosage"
                                    android:layout_width="match_parent"
                                    android:layout_height="54dp"
                                    android:background="@drawable/bg_cp_field"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:inputType="none"
                                    android:textColor="#101828"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/frequency"
                                android:textColor="#475467"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!--  FIX: dropdown_menu requires outlined/filled (NOT boxBackgroundMode="none") -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:endIconMode="dropdown_menu"
                                app:endIconTint="#98A2B3"
                                app:hintEnabled="false"

                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxStrokeColor="@android:color/transparent"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/ddFrequency"
                                    android:layout_width="match_parent"
                                    android:layout_height="54dp"
                                    android:background="@drawable/bg_cp_field"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:inputType="none"
                                    android:textColor="#101828"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Duration -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/duration"
                        android:textColor="#475467"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!--  FIX: dropdown_menu requires outlined/filled (NOT boxBackgroundMode="none") -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#98A2B3"
                        app:hintEnabled="false"

                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/ddDuration"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:background="@drawable/bg_cp_field"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="none"
                            android:textColor="#101828"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Special instructions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/special_instructions_optional"
                        android:textColor="#475467"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etInstructions"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:background="@drawable/bg_cp_field"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:hint="@string/eg_take_after_meals"
                            android:textColor="#101828"
                            android:textColorHint="#98A2B3"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelMed"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="@string/cancel"
                            android:textColor="#101828"
                            app:cornerRadius="14dp"
                            app:strokeColor="#E4E7EC"
                            app:strokeWidth="1dp"
                            android:backgroundTint="#F2F4F7" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddMed"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="@string/add"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="14dp"
                            android:backgroundTint="#93C5FD" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/additional_notes"
                android:textColor="#475467"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_cp_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="@string/any_additional_instructions"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Follow-up Recommendation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/followup_recommendation"
                android:textColor="#475467"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFollowup"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_cp_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="@string/eg_after_5_days"
                    android:textColor="#101828"
                    android:textColorHint="#98A2B3"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendPrescription"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/send_prescription"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#93C5FD"
        app:cornerRadius="18dp"
        app:iconTint="#FFFFFF"
        app:iconPadding="10dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
