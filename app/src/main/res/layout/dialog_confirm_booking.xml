<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_booking_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#101828" />

    <TextView
        android:id="@+id/tvConfirmMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/confirm_booking_message"
        android:textSize="14sp"
        android:textColor="#475467" />

    <TextView
        android:id="@+id/tvConfirmDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#101828" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/confirm_booking_cta_cancel"
            android:textAllCaps="false"
            app:backgroundTint="#E4E7EC"
            android:textColor="#101828" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYesBook"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/confirm_booking_cta_yes"
            android:textAllCaps="false"
            app:backgroundTint="#2563EB"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
