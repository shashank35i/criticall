<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Skip -->
    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="16sp"
        android:textColor="#667085"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"/>

    <!-- Illustration Area -->
    <FrameLayout
        android:id="@+id/illustration_container"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:background="@drawable/bg_circle_soft">

        <!-- White Card -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_white_rounded">

            <!-- Doctor Emoji / Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_doctor"/>

            <!-- Phone Icon -->
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:background="@drawable/bg_green_square"
                android:padding="10dp"
                android:src="@drawable/ic_call"
                app:tint="#FFFFFF"/>

            <!-- Video Icon -->
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_blue_square"
                android:padding="10dp"
                android:src="@drawable/ic_video"
                app:tint="#FFFFFF"/>
        </FrameLayout>

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustration_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Consult Doctors Without\nTravel"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#101828"/>

    <!-- Description -->
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="Video or audio consultations with verified doctors from your village. No need to travel far."
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:textSize="16sp"
        android:textColor="#667085"/>

    <!-- Dots Indicator -->
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <View
            android:layout_width="28dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_dot_active"
            android:layout_margin="6dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_dot_inactive"
            android:layout_margin="6dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_dot_inactive"
            android:layout_margin="6dp"/>
    </LinearLayout>

    <!-- Next Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Next"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_continue_btn"/>

</RelativeLayout>
