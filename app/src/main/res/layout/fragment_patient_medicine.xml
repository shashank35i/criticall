<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ss_surface_alt">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#EAECF0"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_availability"
                android:textColor="#101828"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                tools:text="Medicine Availability"/>

            <TextView
                android:id="@+id/tvSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/find_nearby_pharmacies"
                android:textColor="#667085"
                android:textSize="13sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearch"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                android:layout_marginRight="10dp"
                app:strokeColor="#E4E7EC"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSearch"
                app:layout_constraintBottom_toBottomOf="@id/btnSearch">

                <EditText
                    android:id="@+id/etSearchMedicine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_medicine_name_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"


                    android:gravity="center_vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColor="#101828"
                    android:textColorHint="#D0D5DD"
                    android:textSize="16sp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearch"
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:text="@string/search"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#2563EB"
                app:layout_constraintTop_toTopOf="@id/cardSearch"
                app:layout_constraintBottom_toBottomOf="@id/cardSearch"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/ivLoc"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="14dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="#667085"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvNearLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:text="@string/showing_pharmacies_near"
                android:textColor="#667085"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/ivLoc"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"/>

            <TextView
                android:id="@+id/tvNearValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:text="@string/fetching_location"
                android:textColor="#101828"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/tvNearLabel"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Chennai, Tamil Nadu"/>

            <TextView
                android:id="@+id/tvRecentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/recent_searches"
                android:textColor="#475467"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvNearLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/rowChips1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvRecentTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chipRecent1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/med_paracetamol"
                    android:textAllCaps="false"
                    android:textColor="#475467"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:letterSpacing="0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F2F4F7"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chipRecent2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/med_cetirizine"
                    android:textAllCaps="false"
                    android:textColor="#475467"
                    android:textSize="14sp"
                    android:letterSpacing="0"
                    android:minWidth="0dp"
                    android:layout_marginBottom="10dp"
                    android:minHeight="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F2F4F7"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chipRecent3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/med_vitamin_c"
                    android:textAllCaps="false"
                    android:textColor="#475467"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:letterSpacing="0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F2F4F7"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowChips2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rowChips1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chipRecent4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/med_cough_syrup"
                    android:textAllCaps="false"
                    android:textColor="#475467"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:letterSpacing="0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F2F4F7"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPopularTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/popular_medicines"
                android:textColor="#475467"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/rowChips2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMedicines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/tvPopularTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="@string/no_results"
                android:textColor="#667085"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvPopularTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
