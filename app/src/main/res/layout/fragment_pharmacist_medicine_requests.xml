<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Requests"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 pending requests"
        android:textSize="14sp"
        android:textColor="#667085"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/vDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <!--  EMPTY STATE (shown when 0 requests) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vEmptyState"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_request_info"
                android:padding="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivEmpty"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_empty_requests"
                    android:contentDescription="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvEmptyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/no_medicine_requests"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/ivEmpty"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvEmptySub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/no_medicine_requests_sub"
                    android:textSize="13sp"
                    android:textColor="#667085"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tvEmptyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ========= CARD 1 ========= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vReq1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_request_card"
                android:paddingBottom="16dp"
               android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvReq1Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvReq1Status"/>

                <TextView
                    android:id="@+id/tvReq1Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Stock"
                    android:textSize="12sp"
                    android:textColor="#2563EB"
                    android:background="@drawable/bg_badge_green"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tvReq1Name"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvReq1Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="12sp"
                    android:textColor="#667085"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq1Name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vReq1Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_request_info"
                    android:padding="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq1Time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvReq1Looking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking for:"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq1Med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#101828"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq1Looking"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq1Qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: —"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq1Med"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btnReq1Call"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textColor="#2563EB"

                    android:background="@android:color/transparent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vReq1Info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnReq1Mark"/>

                <Button
                    android:id="@+id/btnReq1Mark"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:text="Mark Available"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_green"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vReq1Info"
                    app:layout_constraintStart_toEndOf="@id/btnReq1Call"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ========= CARD 2 ========= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vReq2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_request_card"
                android:paddingBottom="16dp"
             android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/vReq1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvReq2Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvReq2Status"/>

                <TextView
                    android:id="@+id/tvReq2Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low Stock"
                    android:textSize="12sp"
                    android:textColor="#D97706"
                    android:background="@drawable/bg_badge_yellow"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tvReq2Name"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvReq2Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="12sp"
                    android:textColor="#667085"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq2Name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vReq2Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_request_info"
                    android:padding="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq2Time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvReq2Looking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking for:"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq2Med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#101828"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq2Looking"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq2Qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: —"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq2Med"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btnReq2Call"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textColor="#2563EB"

                    android:background="@android:color/transparent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vReq2Info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ========= CARD 3 ========= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vReq3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_request_card"
                android:paddingBottom="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/vReq2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvReq3Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvReq3Status"/>

                <TextView
                    android:id="@+id/tvReq3Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Out of Stock"
                    android:textSize="12sp"
                    android:textColor="#F04438"
                    android:background="@drawable/bg_badge_red_soft"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tvReq3Name"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvReq3Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="12sp"
                    android:textColor="#667085"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq3Name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vReq3Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_request_info"
                    android:padding="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tvReq3Time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvReq3Looking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking for:"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq3Med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#101828"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq3Looking"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvReq3Qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: —"
                        android:textSize="13sp"
                        android:textColor="#667085"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReq3Med"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btnReq3Call"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:text="Call"
                    android:textAllCaps="false"

                    android:textColor="#2563EB"

                    android:background="@android:color/transparent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vReq3Info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
