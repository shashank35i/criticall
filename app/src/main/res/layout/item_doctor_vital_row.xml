<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#F7F8FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvVitalDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jan 10, 2025"
            android:textColor="#667085"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 3 columns -->
        <TextView
            android:id="@+id/tvBpLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vitals_bp"
            android:textColor="#667085"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvVitalDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g1"
            />

        <TextView
            android:id="@+id/tvBpValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="130/85"
            android:textColor="#101828"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvBpLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g1"
            />

        <TextView
            android:id="@+id/tvSugarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vitals_sugar"
            android:textColor="#667085"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvVitalDate"
            app:layout_constraintStart_toEndOf="@id/g1"
            app:layout_constraintEnd_toStartOf="@id/g2"
            />

        <TextView
            android:id="@+id/tvSugarValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="145 mg/dL"
            android:textColor="#101828"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvSugarLabel"
            app:layout_constraintStart_toEndOf="@id/g1"
            app:layout_constraintEnd_toStartOf="@id/g2"
        />

        <TextView
            android:id="@+id/tvTempLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vitals_temp"
            android:textColor="#667085"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvVitalDate"
            app:layout_constraintStart_toEndOf="@id/g2"
            app:layout_constraintEnd_toEndOf="parent"
         />

        <TextView
            android:id="@+id/tvTempValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="98.6Â°F"
            android:textColor="#101828"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvTempLabel"
            app:layout_constraintStart_toEndOf="@id/g2"
            app:layout_constraintEnd_toEndOf="parent"
          />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3333"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6666"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
