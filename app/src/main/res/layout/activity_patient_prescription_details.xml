<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBlueBar"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:background="#1E3A8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/ic_back"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prescription"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="Dr."
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvDoctorSpec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="@string/speciality_general_physician"
            android:textSize="12.5sp"
            android:textColor="#DBEAFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvClinicLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="@string/clinic_placeholder"
            android:textSize="12.5sp"
            android:textColor="#DBEAFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDoctorSpec"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvRegNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="@string/medical_registration_number_unknown"
            android:textSize="12.5sp"
            android:textColor="#DBEAFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvClinicLine"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/vTopDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/topBlueBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/vTopDivider"
        app:layout_constraintBottom_toTopOf="@id/bottomArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="18dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/patient"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#101828"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvRxDateRight"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/tvRxDateRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_unknown"
                        android:textSize="13sp"
                        android:textColor="#101828"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvPatientName"/>

                    <TextView
                        android:id="@+id/tvPatientMeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_meta_placeholder"
                        android:textSize="12.5sp"
                        android:textColor="#667085"
                        app:layout_constraintStart_toStartOf="@id/tvPatientName"
                        app:layout_constraintTop_toBottomOf="@id/tvPatientName"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_unknown"
                        android:textSize="1sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPatientMeta"/>

                    <TextView
                        android:id="@+id/tvBannerSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_id_unknown"
                        android:textSize="12.5sp"
                        android:textColor="#667085"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPatientMeta"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/provisional_diagnosis"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tvDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultation_summary_unavailable"
                android:textSize="14sp"
                android:textColor="#101828"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F4F7"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicines"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hash_col"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_col"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="22dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instruction_col"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E7EC"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"/>

            <TextView
                android:id="@+id/tvViewFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_full_prescription"
                android:textColor="#2563EB"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F4F7"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctors_notes"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultation_summary_unavailable"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#101828"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/adviceBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                android:visibility="gone"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/general_advice_notes"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>

                    <TextView
                        android:id="@+id/tvAdvice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/isolate_yourself"
                        android:textSize="14sp"
                        android:textColor="#101828"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tvAdvice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monitor_oxygen"
                        android:textSize="14sp"
                        android:textColor="#101828"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tvAdvice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consult_covid_center"
                        android:textSize="14sp"
                        android:textColor="#101828"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signatureBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvSignatureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signature"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/vSigLine"
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:background="#E4E7EC"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSignatureLabel"/>

                <TextView
                    android:id="@+id/tvSignatureName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Name"
                    android:textSize="18sp"
                    android:textColor="#101828"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vSigLine"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFF7E6"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/ivCalendar"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/ic_calendar"
                        app:tint="#B45309"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvFollowTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_up_recommended"
                        android:textStyle="bold"
                        android:textSize="14.5sp"
                        android:textColor="#92400E"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@id/ivCalendar"
                        app:layout_constraintTop_toTopOf="@id/ivCalendar"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvFollowSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_up_default"
                        android:textSize="13sp"
                        android:textColor="#B45309"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/tvFollowTitle"
                        app:layout_constraintStart_toStartOf="@id/tvFollowTitle"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="@string/download"
            android:textAllCaps="false"
            android:textColor="#101828"
            app:iconGravity="textStart"
            app:cornerRadius="14dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E4E7EC"
            app:backgroundTint="#F2F4F7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnShare"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="@string/share"
            android:textAllCaps="false"
            android:textColor="#101828"
            app:iconGravity="textStart"
            app:cornerRadius="14dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E4E7EC"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/btnDownload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/go_to_home"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:backgroundTint="#2563EB"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnDownload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/vLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
