<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_patients"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_patients_fmt_3"
        android:textSize="14sp"
        android:textColor="#667085"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- SEARCH (Hint visible like big apps) -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="@string/search_patients"
        android:textColorHint="#D0D5DD"
        android:background="@drawable/bg_search"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:textColor="#101828"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionSearch"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FILTER CHIPS -->
    <LinearLayout
        android:id="@+id/chipRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/all"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:background="@drawable/bg_chip_active"/>

        <TextView
            android:id="@+id/chipActive"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/active"
            android:textColor="#475467"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:background="@drawable/bg_chip"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/chipRecovered"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/recovered"
            android:textColor="#475467"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:background="@drawable/bg_chip"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPatients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/chipRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EMPTY -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_patients_found"
        android:textColor="#667085"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/chipRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
