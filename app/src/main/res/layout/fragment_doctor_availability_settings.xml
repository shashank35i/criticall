<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"/>

    <!-- Section title -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set Your Working Hours"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Patients can book appointments during these times"
        android:textSize="14sp"
        android:textColor="#667085"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Enable all -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnableAll"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Enable All Weekdays"
        android:textAllCaps="false"
        android:textColor="#2563EB"
        android:background="@drawable/bg_chip_green"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDisableAll"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDisableAll"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="Disable All"
        android:textAllCaps="false"
        android:textColor="#101828"
        android:background="@drawable/bg_chip_gray"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/btnEnableAll"
        app:layout_constraintStart_toEndOf="@id/btnEnableAll"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= DAY CARD TEMPLATE (MONDAY) ========= -->

    <View
        android:id="@+id/vMonday"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_day_card"
        app:layout_constraintTop_toBottomOf="@id/btnEnableAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivMonday"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_calendar"
        app:tint="#667085"
        app:layout_constraintStart_toStartOf="@id/vMonday"
        app:layout_constraintTop_toTopOf="@id/vMonday"
        app:layout_constraintBottom_toBottomOf="@id/vMonday"/>

    <TextView
        android:id="@+id/tvMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivMonday"
        app:layout_constraintTop_toTopOf="@id/vMonday"
        app:layout_constraintBottom_toBottomOf="@id/vMonday"/>

    <Switch
        android:id="@+id/swMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="@id/vMonday"
        app:layout_constraintTop_toTopOf="@id/vMonday"
        app:layout_constraintBottom_toBottomOf="@id/vMonday"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvMonFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00"
        android:textStyle="bold"
        android:textColor="#101828"
        app:layout_constraintStart_toStartOf="@id/tvMonday"
        app:layout_constraintTop_toBottomOf="@id/tvMonday"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvMonToLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:textColor="#98A2B3"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/tvMonFrom"
        app:layout_constraintBaseline_toBaselineOf="@id/tvMonFrom"/>

    <TextView
        android:id="@+id/tvMonTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:00"
        android:textStyle="bold"
        android:textColor="#101828"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/tvMonToLabel"
        app:layout_constraintBaseline_toBaselineOf="@id/tvMonFrom"/>

    <!-- ========= NOTE ========= -->

    <View
        android:id="@+id/vNote"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_note"
        app:layout_constraintTop_toBottomOf="@id/vMonday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note: Patients will see available slots based on your schedule. You can update this anytime."
        android:textColor="#2563EB"
        android:textSize="13sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/vNote"
        app:layout_constraintStart_toStartOf="@id/vNote"
        app:layout_constraintEnd_toEndOf="@id/vNote"/>

    <!-- SAVE BUTTON -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Save Availability"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_green"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
