<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:tint="#101828"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/analysis_results"
        android:textColor="#101828"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        android:layout_marginEnd="50dp"
        tools:text="Analysis Results"/>

    <View
        android:id="@+id/divTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F2F4F7"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/divTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Urgency banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUrgency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF7ED"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxWarn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FEF3C7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/note"
                            android:src="@drawable/ic_warning"
                            app:tint="#F79009"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvUrgencyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/medium_urgency"
                        android:textColor="#92400E"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxWarn"
                        app:layout_constraintTop_toTopOf="@id/boxWarn"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Medium Urgency"/>

                    <TextView
                        android:id="@+id/tvUrgencySub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/urgency_24_48"
                        android:textColor="#C2410C"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/boxWarn"
                        app:layout_constraintTop_toBottomOf="@id/tvUrgencyTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="We recommend consulting a doctor within 24-48 hours"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvPossible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="22dp"
                android:text="@string/possible_conditions"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardUrgency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Possible Conditions"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:layout_constraintTop_toBottomOf="@id/tvPossible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_condition_result"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvRecs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="22dp"
                android:text="@string/recommendations"
                android:textColor="#101828"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardConditions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Recommendations"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvRecs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/boxRecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E0F2FE">

                            <TextView
                                android:id="@+id/tvRecNo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#2563EB"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvRecText1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/rec_rest_hydrated"
                            android:textColor="#475467"
                            android:textSize="16sp"
                            tools:text="Rest and stay hydrated"/>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E0F2FE">

                            <TextView
                                android:id="@+id/tvRecNo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="#2563EB"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvRecText2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/rec_otc_if_needed"
                            android:textColor="#475467"
                            android:textSize="16sp"
                            tools:text="Take over-the-counter fever medicine if needed"/>
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E0F2FE">

                            <TextView
                                android:id="@+id/tvRecNo3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="#2563EB"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvRecText3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/rec_monitor_2_3"
                            android:textColor="#475467"
                            android:textSize="16sp"
                            tools:text="Monitor symptoms for 2-3 days"/>
                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E0F2FE">

                            <TextView
                                android:id="@+id/tvRecNo4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="#2563EB"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvRecText4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/rec_consult_if_worse"
                            android:textColor="#475467"
                            android:textSize="16sp"
                            tools:text="Consult a doctor if symptoms worsen"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EFF6FF"
                app:strokeWidth="1dp"
                app:strokeColor="#BFDBFE"
                app:layout_constraintTop_toBottomOf="@id/cardRecs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvActionTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/suggested_action"
                        android:textColor="#1E3A8A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Suggested Action"/>

                    <TextView
                        android:id="@+id/tvActionSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#2563EB"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/tvActionTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Based on your symptoms, we recommend consulting a General Physician"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBook"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="14dp"
                        android:text="@string/book_consultation"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"

                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"

                        app:cornerRadius="18dp"
                        app:backgroundTint="#2563EB"
                        app:iconTint="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/tvActionSub"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSave"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/cardAction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivSave"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/save_to_health_records"
                        android:src="@drawable/ic_doc"
                        app:tint="#667085"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvSave"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/save_to_health_records"
                        android:textColor="#475467"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivSave"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivChevron"
                        tools:text="Save to Health Records"/>

                    <ImageView
                        android:id="@+id/ivChevron"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/open"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#98A2B3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/analysis_disclaimer_footer"
                android:textColor="#98A2B3"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/cardSave"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="This analysis is AI-generated and should not replace professional medical advice."/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
