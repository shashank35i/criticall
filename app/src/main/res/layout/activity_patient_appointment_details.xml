<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top bar -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:tint="#101828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="18dp"
        android:text="@string/appointment_details"
        android:textColor="#101828"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Green banner: Starting Soon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStartSoon"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#2563EB"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/boxClock"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="18dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1DAE84"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/starting_soon"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:tint="#FFFFFF"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvStartSoonTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="22dp"
                android:text="@string/starting_soon"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/boxClock"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvStartSoonRight"/>

            <TextView
                android:id="@+id/tvStartSoonSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="@string/consultation_begins_in"
                android:textColor="#E0EAFF"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/boxClock"
                app:layout_constraintTop_toBottomOf="@id/tvStartSoonTitle"
                app:layout_constraintEnd_toStartOf="@id/tvStartSoonRight"/>

            <!-- REQUIRED ID (your Kotlin uses this) -->
            <TextView
                android:id="@+id/tvStartSoonRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="@string/five_minutes"
                tools:text="5 minutes"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvStartSoonTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvStartSoonSub"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Fixed bottom button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartNow"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:text="@string/start_consultation_now"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="18dp"
        app:icon="@drawable/ic_call"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#2563EB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardStartSoon"
        app:layout_constraintBottom_toTopOf="@id/btnStartNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp">

            <!-- Appointment ID card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApptId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#F2F4F7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvApptIdLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/appointment_id"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- REQUIRED ID -->
                    <TextView
                        android:id="@+id/tvApptId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="APT123456"
                        tools:text="APT123456"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/tvApptIdLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E4E7EC"
                app:layout_constraintTop_toBottomOf="@id/cardApptId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxAvatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0EAFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_doctor"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvDocName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/sample_doctor_name"
                        tools:text="Dr. Rajesh Kumar"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toTopOf="@id/boxAvatar"
                        app:layout_constraintEnd_toStartOf="@id/ivVerified"/>

                    <TextView
                        android:id="@+id/tvDocSpec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/sample_doctor_specialty"
                        tools:text="General Physician"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvDocName"
                        app:layout_constraintEnd_toStartOf="@id/ivVerified"/>

                    <!-- REQUIRED ID (your Kotlin error mentions tvPlace) -->
                    <TextView
                        android:id="@+id/tvPlace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/sample_place"
                        tools:text="District Hospital, Ludhiana"
                        android:textColor="#98A2B3"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxAvatar"
                        app:layout_constraintTop_toBottomOf="@id/tvDocSpec"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_verified"
                        app:tint="#2563EB"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvDocName"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Date & Time card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#F2F4F7"
                app:layout_constraintTop_toBottomOf="@id/cardDoctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxCalIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DBEAFE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvDateTimeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/date_time"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxCalIcon"
                        app:layout_constraintTop_toTopOf="@id/boxCalIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/sample_date_time"
                        tools:text="Today, January 15, 2025"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxCalIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvDateTimeLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvTimeMeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/sample_time_meta"
                        tools:text="4:00 PM   (15 minutes)"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxCalIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Consultation Type card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F7F8FA"
                app:strokeWidth="1dp"
                app:strokeColor="#F2F4F7"
                app:layout_constraintTop_toBottomOf="@id/cardDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxTypeIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0F2FE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/sym_action_call"
                            app:tint="#2563EB"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvTypeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="@string/consultation_type"
                        android:textColor="#667085"
                        android:textSize="13sp"
                        app:layout_constraintStart_toEndOf="@id/boxTypeIcon"
                        app:layout_constraintTop_toTopOf="@id/boxTypeIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/audio_call"
                        tools:text="Audio Call"
                        android:textColor="#101828"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/boxTypeIcon"
                        app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fee row -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFee"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F0FF"
                app:layout_constraintTop_toBottomOf="@id/cardType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tvFeeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consultation_fee"
                        android:textColor="#475467"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_fee_amount"
                        tools:text="â‚¹200"
                        android:textColor="#2563EB"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Advice card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdvice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#BBD7FF"
                app:cardBackgroundColor="#EAF3FF"
                app:layout_constraintTop_toBottomOf="@id/cardFee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAdviceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/before_your_consultation"
                        android:textColor="#2563EB"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvAdvice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/tip_keep_records"
                        android:textColor="#2563EB"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvAdvice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/tip_quiet_place"
                        android:textColor="#2563EB"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvAdvice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/tip_pen_paper"
                        android:textColor="#2563EB"
                        android:textSize="14sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
