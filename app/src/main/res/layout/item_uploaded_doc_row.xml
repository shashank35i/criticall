<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_doc_row"
    android:padding="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F2F4F7">

        <ImageView
            android:id="@+id/ivDocType"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_file_24"
            app:tint="#101828"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document_1.pdf"
            android:textColor="#101828"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvDocMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="PDF â€¢ 1.2 MB"
            android:textColor="#667085"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="4dp"
        android:contentDescription="Remove"
        app:srcCompat="@drawable/ic_close_20"
        app:tint="#667085"/>
</LinearLayout>
